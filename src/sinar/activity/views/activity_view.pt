<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="sinar.activity"
      metal:use-macro="context/main_template/macros/master">
<body>
  <metal:block fill-slot="content-core">
     <dl><dt>Type</dt>
         <dd tal:repeat="type view/activity_types_titles | nothing">
             <span tal:content="type" />
         </dd>
         <dt>Status</dt>
         <dd tal:content="view/activity_status_title | nothing"></dd>
    </dl>
    <tal:eventsummary replace="structure context/@@event_summary"/>
    <div tal:content="structure context/text/output | nothing"></div>


    <div class="container" id="updates-title" tal:condition="view/updates">
                <h5>Updates</h5>
            </div>

    <div class="row row-cols-1 row-cols-md-3 g-4">
      <div class="col" tal:repeat="item view/updates">
        <div class="card h-100" >
           <img tal:condition="item/image"
                tal:attributes="src string: ${item/absolute_url}/@@images/image/large"
                src="..." class="card-img-top rounded-top" />
            <div class="card-body">
              <h5 class="card-title" tal:content="item/title|nothing">Card title</h5>
            </div>
            <div class="card-footer">
                <a href="" tal:attributes="href item/absolute_url"
                   class="">Read More</a>
            </div>
        </div>
      </div>
    </div>

  </metal:block>
</body>
</html>
